{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ mission.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ mission.createdAt ? mission.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ mission.updatedAt ? mission.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Started</th>
                <td>{{ mission.started ? mission.started|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ended</th>
                <td>{{ mission.ended ? mission.ended|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Booked</th>
                <td>{{ mission.booked ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ mission.archived ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ mission.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ mission.slug }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ mission.address }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ mission.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ mission.city }}</td>
            </tr>
            <tr>
                <th>Emergency</th>
                <td>{{ mission.emergency ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ mission.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mission_index') }}">back to list</a>

    <a href="{{ path('app_mission_edit', {'id': mission.id}) }}">edit</a>

    {{ include('mission/_delete_form.html.twig') }}
{% endblock %}
