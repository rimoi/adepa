		}

	</style>

	<script>

		// Afficher la fleche gauche si scroll
		var arrowLeft = document.getElementById("arrowLeft");

		document.getElementById("container").addEventListener("scroll", myFunction);

		function myFunction() {
  			arrowLeft.classList.add("scroll")
		}


		//Scroller √† gauche au clic

		const buttonLeft = document.getElementById('slide-right');

		buttonLeft.onclick = () => {
  			document.getElementById('container').scrollLeft -= 200;
		};


		// Scroller √† droite au clic
		const button = document.getElementById('slide');

		button.onclick = () => {
  			document.getElementById('container').scrollLeft += 200;
		};

