{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reservation.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ reservation.createdAt ? reservation.createdAt|date('d/m/Y à H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ reservation.updatedAt ? reservation.updatedAt|date('d/m/Y à H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ reservation.note }}</td>
            </tr>
            <tr>
                <th>DateSlot</th>
                <td>{{ reservation.dateSlot ? reservation.dateSlot|date('d/m/Y à H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TimeSlot</th>
                <td>{{ reservation.timeSlot }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_reservation_index') }}">back to list</a>

    <a href="{{ path('admin_reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('back_office/reservation/_delete_form.html.twig') }}
{% endblock %}
