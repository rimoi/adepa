{% extends 'base_admin.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('datatable') }}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('datatable') }}
{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_dash_board_index') }}">Dashboard</a></li>
        <li class="breadcrumb-item active">Liste des réservations</li>
    </ol>

    <div class="mt-3">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Liste des réservations</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"></h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Service</th>
                            <th>Freelance</th>
                            <th>Date réservation</th>
                            <th>Créneau réservation</th>
                            <th>Status</th>
                            <th>Prix</th>
                            <th>Note</th>
                            <th>Crée</th>
                            <th>Mise à jour</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for reservation in reservations %}
                            <tr>
                                <td>
                                    {% if reservation.educatheure %}
                                        <a class="{{ path('app_educatheure_show', {slug: reservation.educatheure.slug}) }}">
                                            {{ reservation.educatheure.title }}
                                        </a>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ reservation.owner.nickname }}
                                </td>
                                <td>{{ reservation.dateSlot|date('d/m/Y') }}</td>
                                <td>{{ reservation.timeSlot }}</td>
                                <td>
                                    {% if reservation.status == 'pending' %}
                                        <span class="badge badge-secondary">En attente</span>
                                    {% elseif reservation.isTerminated() %}
                                        <span class="badge badge-primary">Terminé</span>
                                    {% elseif reservation.status == 'confirmed' %}
                                        <span class="badge badge-success">Confirmé</span>
                                    {% endif %}
                                </td>
                                <td class="text-danger">
                                    {{ reservation.educatheure.price }} €
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" href="#" data-toggle="modal" data-target="#modal-{{ reservation.id }}">
                                        <i class="fas fa-eye">
                                        </i>
                                        Voir la note
                                    </a>
                                </td>
                                <td>{{ reservation.createdAt|date('Y-m-d H:i') }}</td>
                                <td>{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i') : '' }}</td>
                                <td align="center">
                                    {{ include('back_office/reservation/_delete_form.html.twig') }}
                                </td>
                                {% include 'back_office/reservation/_reservation_note.html.twig' %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
