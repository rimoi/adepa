{% import 'macros/_macro_upload.html.twig' as upload %}

<div class="card-body">
    <div class="p-5">
        {{ form_start(form, {'attr': {'class': 'user'}}) }}

        <div class="row">
            <div class="col-12">
                {{ form_label(form.file) }}
                {{ upload.image(
                    form.file,
                    article.file
                ) }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.title) }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.content, {
                    label: 'Contenu'
                }) }}
            </div>
        </div>
        <hr>

        {% form_theme form 'bootstrap_4_layout.html.twig' %}

        <div class="row">
            <div class="col-12">
                {{ form_row(form.published) }}
            </div>
        </div>
        <hr>
    </div>

    <div class="row">
        <div class="col-12 col-lg-6 my-1 text-left">
            {% if user is defined %}
                <a href="#" class="btn btn-danger js-deleted" data-url="{{ path('admin_article_archived', {slug: article.slug }) }}">
                    Supprimer
                </a>
            {% endif %}
        </div>
        <div class="col-12 col-lg-6 my-1 text-right">
            <a href="{{ path('admin_article_index') }}" class="btn btn-secondary">Fermer</a>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
