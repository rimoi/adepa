<div class="row">

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-4 mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Nombre de freelances actives</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ freelance_enabled|length }}</div>
                    </div>
                    <div class="col-4 mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Nombre de freelances non actives</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ freelance_not_enabled|length }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-4 mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Nombre de clients actives</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ client_enabled|length }}</div>
                    </div>
                    <div class="col-4 mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Nombre de clients non actives</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ client_not_enabled|length }}</div>
                    </div>
                    <div class="col-2">
                        <i class="fas fa-user fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

