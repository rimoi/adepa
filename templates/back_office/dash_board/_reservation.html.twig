<div class="card my-5 card-primary" id="dashboard-reservation">
    <div class="card-header">
        <h3 class="card-title">Réservation</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
            <tr>
                <th style="width: 1%">
                    #
                </th>
                <th style="width: 20%">
                    Service
                </th>
                <th style="width: 30%">
                    Freelance
                </th>
                <th>Date réservation</th>
                <th>Créneau réservation</th>
                <th style="width: 8%" class="text-center">
                    Note Freelance
                </th>
                <th>
                    Prix
                </th>
                <th style="width: 8%" class="text-center">
                    Status
                </th>
                <th style="width: 20%">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                    <tr class="reservation-{{ reservation.id }}">
                        <td>
                            {{ reservation.id }}
                        </td>
                        <td>
                            {% if reservation.educatheure %}
                                <a class="{{ path('app_educatheure_show', {slug: reservation.educatheure.slug}) }}">
                                    {{ reservation.educatheure.title }}
                                </a>
                            {% endif %}
                            <br/>
                            <small>
                                Réservation le {{ reservation.createdAt|date('d/m/Y H:i')  }}
                            </small>
                        </td>
                        <td>
                           {{ reservation.owner.nickname }}
                        </td>
                        <td>{{ reservation.dateSlot|date('d/m/Y') }}</td>
                        <td>{{ reservation.timeSlot }}</td>
                        <td>
                            <a class="" href="#" data-toggle="modal" data-target="#modal-{{ reservation.id }}" title="Note du freelance">
                                <i class="fas fa-eye">
                                </i>
                                Note
                            </a>
                        </td>
                        <td class="project-state">
                            {% if reservation.status == 'pending' %}
                                <span class="badge badge-secondary">En attente</span>
                            {% elseif reservation.status == 'confirmed' %}
                                <span class="badge badge-success">Confirmé</span>
                            {% elseif reservation.status == 'confirmed' %}
                                <span class="badge badge-primary">Terminé</span>
                            {% endif %}
                        </td>
                        <td class="text-danger">
                            {{ reservation.educatheure.price }} €
                        </td>
                        <td class="project-actions text-right">

                            <button class="btn btn-primary btn-sm js-validate-reservation" data-id="{{ reservation.id }}" data-element="reservation-{{ reservation.id }}">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Valider
                            </button>
                            <a class="btn btn-danger btn-sm" href="#" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet réservation ?');">
                                <i class="fas fa-trash">
                                </i>
                                Supprimé
                            </a>
                        </td>
                        {% include 'back_office/reservation/_reservation_note.html.twig' %}
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>