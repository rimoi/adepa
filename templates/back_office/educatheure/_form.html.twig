{% import 'macros/_macro_upload.html.twig' as upload %}

<div class="card-body">
    <div class="p-5">
        {{ form_start(form, {'attr': {'class': 'user'}}) }}
        <div class="row">
            <div class="col-12">
                {{ form_row(form.title) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.price) }}
            </div>
        </div>
        <div class="row my-3">
            <div class="col-12">
                {{ form_row(form.zipCode) }}
            </div>
        </div>
        <div class="row my-3">
            <div class="col-12">
                {{ form_row(form.city) }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.numberParticipant) }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.publicType) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.description) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.noteBooking) }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.days) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-6">
                {{ form_row(form.minDuration) }}
            </div>
            <div class="col-12 col-lg-6">
                {{ form_row(form.maxDuration) }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                {{ form_label(form.image) }}
                {{ upload.image(
                    form.image,
                    educatheure.image
                ) }}

            </div>
        </div>
        <hr class="my-3">

        {% form_theme form 'bootstrap_4_layout.html.twig' %}

        <div class="row">
            <div class="col-12">
                {{ form_row(form.published) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-6 my-1 text-left">
            {% if educatheure is defined and educatheure.id  %}
                <a href="#" class="btn btn-danger js-deleted" data-url="{{ path('admin_educatheure_delete', {id: educatheure.id }) }}">
                    Supprimer
                </a>
            {% endif %}
        </div>
        <div class="col-12 col-lg-6 my-1 text-right">
            <a href="{{ path('admin_educatheure_index') }}" class="btn btn-secondary">Fermer</a>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
