{% extends 'base_admin.html.twig' %}

{% block title 'Confirmation des heures de travail' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_dash_board_index') }}">Dashboard</a></li>
        <li class="breadcrumb-item">
            <a href="{{ path('admin_mission_index') }}">Missions</a>
        </li>
        <li class="breadcrumb-item active">{{ block('title') }}</li>
    </ol>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Confirmation les heures de travails</h6>
        </div>

        <div class="card-body">
            <div class="p-5">
                {{ form_start(form, {'attr': {'class': 'user'}}) }}

                <div class="row">
                    <div class="col-12 col-sm-6">
                        {{ form_row(form.debut) }}
                    </div>
                    <div class="col-12 col-sm-6">
                        {{ form_row(form.fin) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 my-2 text-right">
                        <button type="submit" class="btn btn-primary">Envoy√©</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}